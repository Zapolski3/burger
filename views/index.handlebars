<h1></h1>

<h2>Initial box for burgers</h2>

<ul>
  {{#each burgers}}
    {{#unless devoured}}
      {{> burgers/burger-block sleep=true}}
    {{/unless}}
  {{/each}}
</ul>

<h2>burger box on the right</h2>

<ul>
  {{#each burgers}}
   {{!-- <p>{{id}}</p> --}}
   <p>{{burger_name}}</p>
   <p>{{devoured}}</p>
  {{/each}}
</ul>

<h2>Add a Burger</h2>
<form class="create-form">

  <div class="form-group">
    <label for="ca"></label>
    <input type="text" id="ca" name="name" size="35" heigth="20">
  </div>

  <button type="submit">Add burger</button>
</form>
