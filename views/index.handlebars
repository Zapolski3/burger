<h1></h1>

<h2>Initial box for burgers</h2>

<ul>
  {{#each burgers}}
  <p>{{burger_name}}</p>
    {{#unless devoured}}
      {{> burgers/burger-block devoured=false}}
    {{/unless}}
  {{/each}}
</ul>

<h2>New burger box</h2>

<ul>
  {{#each burgers}}
  
  {{#if devoured}}
   <li>{{burger_name}}</li>
   {{/if}}
  {{/each}}
</ul>

<h2>Add a Burger</h2>
<form class="create-form">

  <div class="form-group">
    <label for="ca"></label>
    <input type="text" id="ca" name="name" size="35" heigth="20">
  </div>

  <button type="submit">Add burger</button>
</form>
